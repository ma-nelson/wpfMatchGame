<UserControl x:Class="WpfMatchgame.Controls.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfMatchgame.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="btnCard" IsEnabled="{Binding Interactable}" BorderBrush="Black" Background="White" Click="btnCard_Click">
            <Image x:Name="imgCard" Source="../Resources/card.png"/>
        </Button>
        <Label x:Name="lblSymbol" Visibility="Hidden" FontSize="64" FontFamily="WebDings" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Symbol}"/>
    </Grid>
</UserControl>
